<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-body">
        <h1 class="text-center">Let's have Fast! Furious! Fun!</h1>
        <div class="form form-signup" role="form">               
          <div id="username_form_group" {{bind-attr class=":form-group errors.username:has-error errors.username:has-feedback"}}>
            <div class="input-group">
              <span class="input-group-addon">
		<span class="glyphicon glyphicon-envelope">
		</span>
              </span>
	      {{input type="text" value=username class="form-control" placeholder="Email Address"}}
	      {{#if errors.username}}
		<span class="glyphicon glyphicon-remove form-control-feedback"></span>
		<span class="help-block">
		  {{#each errors.username}}
		    {{message}}
		  {{/each}}
		</span>
	      {{/if}}
            </div>
          </div>
          <div id="password_form_group" {{bind-attr class=":form-group errors.password:has-error errors.password:has-feedback"}}>
            <div class="input-group">
              <span class="input-group-addon">
		<span class="glyphicon glyphicon-lock"></span>
	      </span>
              {{input type="password" value=password class="form-control" placeholder="Password" }}
	      {{#if errors.password}}
		<span class="glyphicon glyphicon-remove form-control-feedback"></span>
		<span class="help-block">
		  {{#each errors.password}}
		    {{message}}
		  {{/each}}
		</span>
	      {{/if}}
            </div>
          </div>		
	  <div id="confirm_password_form_group" {{bind-attr class=":form-group confirm_password_error:has-error confirm_password_error:has-feedback"}}>
	    <div class="input-group">
              <span class="input-group-addon">
		<span class="glyphicon glyphicon-lock"></span>
	      </span>
              {{input type="password" value=confirm_password class="form-control" placeholder="Confirm Password" }}
	      {{#if confirm_password_error}}
		<span class="glyphicon glyphicon-remove form-control-feedback"></span>
		<span class="help-block">
		  {{confirm_password_error}}
		</span>
	      {{/if}}
	    </div>
	  </div>	

	  <div id="credit_card_errors" {{bind-attr class="credit_card_error:has-error"}}>
	    {{#if credit_card_error}}
	      <span class="glyphicon glyphicon-remove form-control-feedback"></span>
	      <span class="help-block">
		{{credit_card_error_message}}
	      </span>
	    {{/if}}
	    <div id="credit_card_number_group" 
		 {{bind-attr class=":form-group credit_card_number_error:has-error"}}>
	      <div class="input-group">
                <span class="input-group-addon">
		  <span class="glyphicon glyphicon-credit-card"></span>
		</span>
                {{input type="text" value=credit_card_number class="form-control" 
		placeholder="Credit Card Number" }}
		{{#if credit_card_number_error}}
		  <span class="glyphicon glyphicon-remove form-control-feedback"></span>
		  <span class="help-block">
		    {{credit_card_number_error}}
		  </span>
		{{/if}}
	      </div>
	    </div>		

	    <div id="cvc_number_group" {{bind-attr class=":form-group cvc_number_error:has-error "}}>
	      <div class="input-group">
                <span class="input-group-addon">
		  <span class="glyphicon glyphicon-credit-card"></span>
		</span>
                {{input type="text" value=cvc_number class="form-control" placeholder="CVC Number" }}
		{{#if cvc_number_error}}
		  <span class="glyphicon glyphicon-remove form-control-feedback"></span>
		  <span class="help-block">
		    {{cvc_number_error}}
		  </span>
		{{/if}}
	      </div>
	    </div>		

	    <div id="expiration_date_group" {{bind-attr class=":form-group expiration_date_error:has-error "}}>
	      <div class="input-group">
                <span class="input-group-addon">
		  <span class="glyphicon glyphicon-calendar"></span>
		</span>
                {{input type="text" value=expiration_date class="form-control datepicker" placeholder="MM/YYYY" data-provide="datepicker" data-date-format="mm/yyyy" data-date-minViewMode="1"}}
		{{#if expiration_date_error}}
		  <span class="glyphicon glyphicon-remove form-control-feedback"></span>
		  <span class="help-block">
		    {{expiration_date_error}}
		  </span>
		{{/if}}
	      </div>
	    </div>
	    
	  </div>

        </div>
        <button 
	  {{action 'signup'}}
	  class="btn btn-sm btn-primary btn-block" 1
role="button">
	  I want to do things!
	</button> 
      </div>
    </div>
  </div>
</div>

