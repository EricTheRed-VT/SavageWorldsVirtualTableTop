<div class="container">
  <div class="page-header">
    <h1>Edit Setting</h1>
  </div>
  <form class="form-horizontal" role="form">
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">Setting Name</label>
      <div class="col-sm-10">
	{{input type="text" value=model.name class="form-control" placeholder="Setting Name"}}
	{{#if errors.name}}
	  <span class="glyphicon glyphicon-remove form-control-feedback"></span>
	  <span class="help-block">
	    {{#each errors.name}}
	      {{message}}
	    {{/each}}
	  </span>
	{{/if}}
      </div>
    </div>
    {{two-column-picker 
    name="Rules" 
    available=controller.settingRules 
    selected=controller.model.settingRules}}
    {{two-column-picker name="Skills" 
    available=controller.skillDescriptions 
    selected=controller.model.skillDescriptions}}
    {{two-column-picker name="Hindrances" 
    available=controller.hindrances 
    selected=controller.model.hindrances}}
    {{two-column-picker name="Edges" 
    available=controller.edges 
    selected=controller.model.edges}}

    <button 
      {{action 'save'}}
      class="btn btn-sm btn-primary" role="button">
      Save
    </button> 
  </form>
</div>
