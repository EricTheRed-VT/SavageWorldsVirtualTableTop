<div class="container">
  <div class="page-header">
    <h1>Edit Setting</h1>
  </div>
  <form class="form-horizontal" role="form">
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">Setting Name</label>
      <div class="col-sm-10">
	{{input type="text" value=model.name class="form-control" placeholder="Setting Name"}}
	{{#if errors.name}}
	  <span class="glyphicon glyphicon-remove form-control-feedback"></span>
	  <span class="help-block">
	    {{#each errors.name}}
	      {{message}}
	    {{/each}}
	  </span>
	{{/if}}
      </div>
    </div>
    {{two-column-picker name="Rules" available=controller.settingRules selected=controller.model.settingRules}}
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">Skills</label>
      <div class="col-sm-5">
	<div class="panel panel-default">
	  <div class="panel-heading">Available</div>
	  <div class="panel-body">
	    <ul class="list-group">
	      {{#each skill in controller.skillDescriptions}}
		<li class="list-group-item" {{action addSkill skill}}>{{skill.name}}({{skill.attribute}})</li>
	      {{/each}}
	    </ul>
	  </div>
	</div>
      </div>
      <div class="col-sm-5">
	<div class="panel panel-default">
	  <div class="panel-heading">In Setting</div>
	  <div class="panel-body">
	    <ul class="list-group">
	      {{#each skill in controller.model.skillDescriptions}}
		<li class="list-group-item" {{action removeSkill skill}}>{{skill.name}}({{skill.attribute}})</li>
	      {{/each}}
	    </ul>
	  </div>
	</div>
      </div>
    </div>
    <button 
      {{action 'save'}}
      class="btn btn-sm btn-primary" role="button">
      Save
    </button> 
  </form>
</div>
