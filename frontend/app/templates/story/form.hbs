<form class="form-horizontal" role="form">
	{{error}}
	<div class="row">
		<div class="form-group">
			<label class="col-sm-2 control-label" for="name">Name</label>
			<div class="col-sm-10">
				{{input class="form-control" placeholder="Name" name="name" value=model.name}}
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label" for="name">Plot Point</label>
			<div class="col-sm-10">
				{{input class="form-control" placeholder="Plot Point Name" name="plotPointName" value=model.plotPoint.name readonly="true"}}
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label" for="description">Description</label>
			<div class="col-sm-10">
				{{summer-note content=model.description }}
			</div>
		</div>
		<div class="col-sm-offset-5 col-sm-2">
			<button {{action 'save'}} class="btn btn-primary">Save</button>
			<button {{action 'cancel'}} class="btn btn-default">Cancel</button>
		</div>
	</div>
	<div class="row">
	{{render "chapters.index" model.chapters}}
	</div>
</form>