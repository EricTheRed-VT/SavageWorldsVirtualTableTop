{{#link-to 'standard-hindrances.add' class="btn btn-default"}}New Hindrance{{/link-to}}	
{{#each hindrance in model}}
	<div class="panel panel-default">
  	<div class="panel-heading clearfix">
    	<h3 class="panel-title pull-left">{{hindrance.name}} ({{hindrance.severity}})</h3>
    	<div class="btn-group pull-right">
    		{{#link-to 'standard-hindrance.edit' hindrance class="btn btn-xs btn-primary"}}
    			<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        {{/link-to}}
        <button {{action "remove" hindrance}} class="btn btn-danger btn-xs">
          <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span>
        </button>
      </div>
  	</div>
  	<div class="panel-body">
    	{{{hindrance.description}}}
  	</div>
	</div>
	{{else}}
	<p>There are no hindrances</p>
{{/each}}
{{outlet}}