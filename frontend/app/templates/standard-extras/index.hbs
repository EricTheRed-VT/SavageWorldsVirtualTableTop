{{#link-to 'standard-extras.add' class="btn btn-default"}}New Extra{{/link-to}}	
{{#each extra in model}}
	<div class="panel panel-default">
  		<div class="panel-heading clearfix">
    		<h3 class="panel-title pull-left">{{extra.name}}</h3>
    		<div class="btn-group pull-right">
    			{{#link-to 'standard-extra.edit' extra class="btn btn-xs btn-primary"}}
    				<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            	{{/link-to}}
            	<button {{action "remove" extra}} class="btn btn-danger btn-xs">
            		<span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span>
            	</button>
        	</div>
  		</div>
  		<div class="panel-body">
    		{{{extra.description}}}
  		</div>
	</div>
	{{else}}
	<p>There are no extras</p>
{{/each}}
{{outlet}}