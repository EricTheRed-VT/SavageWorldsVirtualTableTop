{{#link-to 'standard-archetypes.add' class="btn btn-default"}}New Archetype{{/link-to}}	
{{#each archetype in model}}
	<div class="panel panel-default">
  		<div class="panel-heading clearfix">
    		<h3 class="panel-title pull-left">{{archetype.name}}</h3>
    		<div class="btn-group pull-right">
    			{{#link-to 'standard-archetype.edit' archetype class="btn btn-xs btn-primary"}}
    				<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            	{{/link-to}}
            	<button {{action "remove" archetype}} class="btn btn-danger btn-xs">
            		<span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span>
            	</button>
        	</div>
  		</div>
  		<div class="panel-body">
    		{{{archetype.description}}}
  		</div>
	</div>
	{{else}}
	<p>There are no archetypes</p>
{{/each}}
{{outlet}}