<div class="form-group">
	<label class="col-md-2 control-label">{{label}}</label>
	<div class="col-md-10">
		{{yield}}
		{{#if errors}}
			<span class="glyphicon glyphicon-remove form-control-feedback"></span>
			<span class="help-block">
				{{#each errors.description}}
					{{message}}
				{{/each}}
			</span>
		{{/if}}
	</div>
</div>