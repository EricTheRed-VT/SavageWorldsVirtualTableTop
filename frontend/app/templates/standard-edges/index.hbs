{{#link-to 'standard-edges.add' class="btn btn-default"}}New Edge{{/link-to}}	
{{#each edge in model}}
	<div class="panel panel-default">
  		<div class="panel-heading clearfix">
    		<h3 class="panel-title pull-left">{{edge.name}}</h3>
    		<div class="btn-group pull-right">
    			{{#link-to 'standard-edge.edit' edge class="btn btn-xs btn-primary"}}
    				<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            	{{/link-to}}
            	<button {{action "remove" edge}} class="btn btn-danger btn-xs">
            		<span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span>
            	</button>
        	</div>
  		</div>
  		<div class="panel-body">
    		{{{edge.description}}}
  		</div>
	</div>
	{{else}}
	<p>There are no edges</p>
{{/each}}
{{outlet}}