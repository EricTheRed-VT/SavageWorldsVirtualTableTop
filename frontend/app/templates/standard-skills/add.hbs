<form class="form-horizontal" role="form">
	<h2>Add</h2>
	{{error}}
	<div class="row">
		{{text-field property=model.name placeholder="Name of Skill" label="Name"}}
		<div class="form-group">
			<label class="col-sm-2 control-label">Attribute</label>
			<div class="col-sm-10">
				{{attribute-selector selection=model.attribute}}
				{{#if errors }}
					<span class="glyphicon glyphicon-remove form-control-feedback"></span>
					<span class="help-block">
						{{#each errors }}
							{{message}}
						{{/each}}
					</span>
				{{/if}}
			</div>
		</div>
		{{text-area property=model.description label="Description"}}
		<div class="col-sm-offset-5 col-sm-2">
			<button {{action 'save'}} class="btn btn-primary">Save</button>
			<button {{action 'cancel'}} class="btn btn-default">Cancel</button>
		</div>
	</div>
</form>
