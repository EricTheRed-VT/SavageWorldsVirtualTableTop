{{#link-to 'standard-powers.add' class="btn btn-default"}}New Power{{/link-to}}	
{{#each power in model}}
	<h1>
    {{power.name}}
    <div class="btn-group pull-right">
      {{#link-to 'standard-power.edit' power class="btn btn-xs btn-primary"}}
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      {{/link-to}}
      <button {{action "remove" power}} class="btn btn-danger btn-xs">
        <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span>
      </button>
    </div>
  </h1>
  <ul class="list-unstyled">
  <li><label>Rank:</label> {{power.rank}}
  <li><label>Power Points</label> {{power.powerPoints}}
  <li><label>Range:</label> {{power.range}}
  <li><label>Duration:</label> {{power.duration}} ({{power.maintenanceCost}})
  </ul>
  {{{power.description}}}
	{{else}}
	<p>There are no powers</p>
{{/each}}
{{outlet}}