{{error}}
<div class="row">
	{{text-field property=model.name label="Name"}}
	{{text-area property=model.description label="Description"}}
	<div class="row">
		<div class="col-md-1">
			{{input type="number" value=newCost class="form-control" placeholder="+/- 1"}}
		</div>
		<div class="col-md-8">
			{{input type="textarea" value=newDescription class="form-control" placeholder=placeholder}}
		</div>
		<div class="col-md-2">
			<button {{action 'addAbility'}} class="btn btn-primary">Add</button>
		</div>
	</div>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Racial Ability</th>
				<th>Cost</th>
				<th/>
			</tr>
		</thread>
		<tbody>
			{{#each racialAbility in model.racialAbilities}}
				<tr>
					<td>{{racialAbility.description}}</td>
					<td>{{racialAbility.cost}}</td>
					<td><button {{action "removeAbility" racialAbility}} class="btn btn-danger btn-xs">
							<span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span>
						</button>
					</td>
				</tr>
			{{else}}
				<tr>
					<td>
						You should add at least 1 racial ability!
					</td>
					<td>{{racialAbility.cost}}</td>
				</tr>
			{{/each}}
			<tr>
				<th align="right">
					Total
				</th>
				<td>
					{{totalCost}}
				</td>
			</tr>
		</tobdy>
	</table>
	<div class="col-sm-offset-5 col-sm-2">
		<button {{action 'save'}} class="btn btn-primary">Save</button>
		<button {{action 'cancel'}} class="btn btn-default">Cancel</button>
	</div>
</div>