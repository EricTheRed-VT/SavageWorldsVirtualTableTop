<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="SavageWorlds">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>SavageWorlds</jta-data-source>
		<class>jdo.model.BasePersistentModel</class>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="validate" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.transaction.flush_before_completion"
				value="true" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="javax.persistence.sql-load-script-source"
				value="META-INF/sql/armorDescription.sql" />
			<property name="javax.persistence.sql-load-script-source"
				value="META-INF/sql/edgeTypeDescription.sql" />
			<property name="javax.persistence.sql-load-script-source"
				value="META-INF/sql/edgeDescription.sql" />
		</properties>
	</persistence-unit>
</persistence>
